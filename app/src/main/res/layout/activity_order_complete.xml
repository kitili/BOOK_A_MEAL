<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_left" />
    </LinearLayout>
    <!--top bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/header_bg"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@drawable/ben"
            />
        <!--top bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/header_bg"
            android:padding="12dp"
            android:layout_marginBottom="0dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster"
                android:text="Food Sasa"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="35dp"
                android:gravity="center_horizontal" />



        </LinearLayout>
    </LinearLayout>
    <!--Creating the menu grid button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/vector_ek26"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/group" />
        <TextView
            android:id="@+id/no_internet"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="Order Complete"
            android:textSize="28sp"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/your_intern"
            android:layout_width="278dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="Thank you for  Ordering. Your devliery will be in soon."
            android:gravity="center_horizontal|top"
            android:alpha="0.57"
            />


    </LinearLayout>

</LinearLayout>