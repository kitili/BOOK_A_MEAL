<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_left" />
        </LinearLayout>
        <!--top bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/header_bg"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/ben"
                />
            <!--top bar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/header_bg"
                android:padding="12dp"
                android:layout_marginBottom="0dp">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="35dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/homeButton"
                    android:layout_width="387dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:fontFamily="@font/actor"
                    android:background="@color/white"
                    android:text="Profile"
                    android:textColor="@color/orange"
                    android:textSize="22sp" />

            </LinearLayout>
        </LinearLayout>
        <!--Creating the menu grid button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/icons8_person_30"
                android:layout_gravity="left"
                />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_first_name"
            android:layout_marginTop="20dp"
            android:padding="13dp"
            android:hint="First Name"
            android:drawableLeft="@drawable/icons8_person_30"
            android:drawablePadding="10dp"
            android:elevation="3dp"
            android:background="@drawable/edittext_bg"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_other_name"
                android:layout_marginTop="20dp"
                android:padding="13dp"
                android:hint="Other Name"
                android:drawableLeft="@drawable/icons8_person_30"
                android:drawablePadding="10dp"
                android:elevation="3dp"
                android:background="@drawable/edittext_bg"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_email"
                android:layout_marginTop="20dp"
                android:padding="13dp"
                android:hint="Email"
                android:drawableLeft="@drawable/icons8_person_30"
                android:drawablePadding="10dp"
                android:elevation="3dp"
                android:background="@drawable/edittext_bg"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_username"
                android:layout_marginTop="20dp"
                android:padding="13dp"
                android:hint="Username"
                android:drawableLeft="@drawable/icons8_person_30"
                android:drawablePadding="10dp"
                android:elevation="3dp"
                android:background="@drawable/edittext_bg"/>
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Edit Profile"
                android:elevation="0dp"
                android:textColor="#FA4A0C"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>